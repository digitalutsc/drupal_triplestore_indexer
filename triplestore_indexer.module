/**
 * funcation call embedded after hook_insert,hook_update,hook_delete executed
 *
 * @param \Drupal\Core\Entity\EntityInterface $entity
 * @param $action
 */
function queueIndexing(\Drupal\Core\Entity\EntityInterface $entity, $action)
{
  //TODO: check if the entity is content type is selected and triggered event selected
  $config = \Drupal::config('triplestore_indexer.triplestoreindexerconfig');

  // fix warning when Config form hasn't been setup
  if (!isset($config)) {
    return;
  }

  $triggeredEvents = (is_array($config->get('events-to-index'))) ?  array_keys(array_filter($config->get('events-to-index'))) : [];
  $indexedContentTypes = (is_array($config->get('content-type-to-index'))) ? array_keys(array_filter($config->get('content-type-to-index'))) : [];
  $indexedVocabulary = (is_array($config->get('content-type-to-index')))  ? array_keys(array_filter($config->get('taxonomy-to-index'))) : [];

  $result = null;
  switch ($action) {
    case 'insert':
    {
      if (in_array("created", $triggeredEvents)
        && ($entity->getEntityTypeId() === 'node' && in_array($entity->bundle(), $indexedContentTypes)
          || ($entity->getEntityTypeId() === 'taxonomy_term' && in_array($entity->bundle(), $indexedVocabulary)))) {

        // Create a job and add to Advanced Queue
        $payload = [
          'nid' => $entity->id(),
          'type' => $entity->getEntityTypeId(),
          'action' => "insert"
        ];

        if ($config->get('method-of-op') === 'advanced_queue') {
          $job = Job::create('triplestore_index_job', $payload);
          if ($job instanceof Job) {
            $q = Queue::load($config->get("advancedqueue-id"));
            $q->enqueueJob($job);

            // auto run the queue
            if ($config->get("autorun-queue") === 1) {

              //TODO: Run the cron by curl.
              global $base_url;
              //$cmd = "drush --uri=".$base_url." advancedqueue:queue:process " . $config->get("advancedqueue-id") . " 2>&1";
              $process = Drush::drush(Drush::aliasManager()->getSelf(), "advancedqueue:queue:process " . $config->get("advancedqueue-id") . " 2>&1");
            }
          }
        }
        else {
          $service = \Drupal::service('triplestore_indexer.indexing');
          $data = $service->serialization($payload);
          $response = $service->post($data);
          // TODO: log the response to status report
          $result = simplexml_load_string($response);
          if ($result['modified'] > 0 && $result['milliseconds'] > 0) {
            \Drupal::logger('triplestore_indexer')->info($entity->getEntityTypeId() . " ". $entity->id() . " $action: success.");
          }else {
            \Drupal::logger('triplestore_indexer')->error($entity->getEntityTypeId() . " ". $entity->id() . " $action: failed.");
          }
        }

      }
      break;
    }
    case 'update':
    {
      if (in_array("updated", $triggeredEvents)
        && ($entity->getEntityTypeId() === 'node' && in_array($entity->bundle(), $indexedContentTypes)
          || ($entity->getEntityTypeId() === 'taxonomy_term' && in_array($entity->bundle(), $indexedVocabulary)))) {

        // Create a job and add to Advanced Queue
        $payload = [
          'nid' => $entity->id(),
          'type' => $entity->getEntityTypeId(),
          'action' => "update"
        ];

        if ($config->get('method-of-op') === 'advanced_queue') {
          $job = Job::create('triplestore_index_job', $payload);
          if ($job instanceof Job) {
            $q = Queue::load($config->get("advancedqueue-id"));
            $q->enqueueJob($job);
          }
        }
        else {
          // for update
          $service = \Drupal::service('triplestore_indexer.indexing');
          $data = $service->serialization($payload);
          $response = $service->put($payload, $data);

          // Log response
          $result = simplexml_load_string($response);
          if ($result['modified'] > 0 && $result['milliseconds'] > 0) {
            \Drupal::logger('triplestore_indexer')->info($entity->getEntityTypeId() . " ". $entity->id() . " $action: success.");
          }else {
            \Drupal::logger('triplestore_indexer')->error($entity->getEntityTypeId() . " ". $entity->id() . " $action: failed.");
          }
        }

      }
      break;
    }
    case 'delete':
    {
      if (in_array("deleted", $triggeredEvents)
        && ($entity->getEntityTypeId() === 'node' && in_array($entity->bundle(), $indexedContentTypes)
          || ($entity->getEntityTypeId() === 'taxonomy_term' && in_array($entity->bundle(), $indexedVocabulary)))) {

        // get @id of other components (eg. terms, media file) associated with node
        $payload = [
          'nid' => $entity->id(),
          'type' => $entity->getEntityTypeId(),
          'action' => "delete"
        ];
        $service = \Drupal::service('triplestore_indexer.indexing');
        $others = $service->getOtherConmponentAssocNode($payload);

        // Create a job and add to Advanced Queue
        if ($config->get('method-of-op') === 'advanced_queue') {
          if (is_array($others) && count($others) > 0) {
            $payload['others'] = $others;
          }

          $job = Job::create('triplestore_index_job', $payload);
          if ($job instanceof Job) {
            $q = Queue::load($config->get("advancedqueue-id"));
            $q->enqueueJob($job);
          }
        }else {
          global $base_url;
          $service = \Drupal::service('triplestore_indexer.indexing');
          $urijld = "<$base_url/".$entity->getEntityTypeId()."/".$entity->id() . '?_format=jsonld>';
          $response = $service->delete($urijld);

          // check ?s may be insert with uri with ?_format=jsonld
          $result = simplexml_load_string($response);
          if ($result['modified'] <= 0) {
            $uri = "<$base_url/".$entity->getEntityTypeId()."/".$entity->id() . '>';
            $response = $service->delete($uri);

            // delete terms and author associated with the deleting node
            if (is_array($others) && count($others) > 0) {
              foreach ($others as $ouri) {
                if (isset($ouri)) {
                  //TODO: check if this compoent is set to be allowed to delete in config form.
                  $response = $service->delete("<$ouri>");
                }

              }
            }
          }

          // log the response
          $result = simplexml_load_string($response);
          if ($result['modified'] > 0 && $result['milliseconds'] > 0) {
            \Drupal::logger('triplestore_indexer')->info($entity->getEntityTypeId() . " ". $entity->id() . " $action: success.");
          }else {
            \Drupal::logger('triplestore_indexer')->error($entity->getEntityTypeId() . " ". $entity->id() . " $action: failed.");
          }
        }

      }
      break;
    }
    default:
    {
      break;
    }
  }
}

/**
 * get Term ID out of serialized URI
 *
 * @param String $uri
 * @return string|string[]
 */
function getTermIDfromURI(String $uri) {
  global $base_url;
  return str_replace("?_format=jsonld","",  str_replace($base_url."/taxonomy/term/", "", $uri));
}

function getVocabularyFromTermID(int $term_id) {
  $term = \Drupal\taxonomy\Entity\Term::load($term_id);
  return $term->bundle();
}


